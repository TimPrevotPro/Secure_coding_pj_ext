{
	"name": "node-ts-template",
	"version": "1.0.0",
	"description": "Basic template of a node + typescript project",
	"main": "src/index.ts",
	"scripts": {
		"build": "rmdir /s /q dist && npm run compile-schemas  && tsc -p tsconfig.json",
		"dev": "ts-node-dev --respawn src/index.ts",
		"testWindows": " SET NODE_ENV=test&&mocha mocha --require ts-node/register --recursive ./src/specs/**/*.spec.ts --exit --async-stack-traces",
		"testLinux": " env NODE_ENV=test&&mocha mocha --require ts-node/register --recursive ./src/specs/**/*.spec.ts --exit --async-stack-traces",
		"coverage": "nyc --reporter=text mocha dist/specs --timeout 15000 --exit",
		"lint": "eslint --fix src",
		"start": "nodemon",
		"compile-schemas": "json2ts -i src/schemas/json -o src/schemas/types"
	},
	"author": "Alexandre Piedvache et Timothé Prévôt",
	"license": "ISC",
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@types/bcrypt": "^5.0.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/chai": "^4.3.4",
		"@types/chai-as-promised": "^7.1.5",
		"@types/mocha": "^10.0.1",
		"@types/node": "^15.14.9",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"chai": "^4.3.7",
		"chai-as-promised": "^7.1.1",
		"eslint": "^8.2.0",
		"mocha": "^10.1.0",
		"nyc": "^15.1.0",
		"nodemon": "^2.0.20",
		"pino-pretty": "^9.3.0",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.3.2"
	},
	"dependencies": {
		"@fastify/cookie": "^8.3.0",
		"bcrypt": "^5.1.0",
		"bcryptjs": "^2.4.3",
		"chai-http": "^4.3.0",
		"class-validator": "^0.14.0",
		"dotenv": "^16.0.3",
		"fastify": "^4.11.0",
		"json-schema-to-typescript": "^11.0.2",
		"pg": "^8.8.0",
		"pino": "^8.10.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.11"
	}
}
