{
	"name": "node-ts-template",
	"version": "1.0.0",
	"description": "Basic template of a node + typescript project",
	"main": "dist/index.js",
	"scripts": {
		"build": "rmdir /s /q dist && npm run compile-schemas  && tsc -p tsconfig.json",
		"lint": "eslint --fix src",
		"dev": "ts-node-dev --respawn src/index.ts",
		"start": "node --async-stack-traces dist/index.js",
		"test": "SET NODE_ENV=test&&mocha --recursive dist/specs --exit --async-stack-traces",
		"deliver": "git archive --format=zip --output=deliver.zip HEAD",
		"compile-schemas": "json2ts -i src/schemas/json -o src/schemas/types"
	},
	"author": "Vincent Petit & Duc-Thomas Nguyen",
	"license": "ISC",
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@types/bcrypt": "^5.0.0",
		"@types/chai": "^4.3.4",
		"@types/chai-as-promised": "^7.1.5",
		"@types/mocha": "^10.0.1",
		"@types/node": "^15.14.9",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"chai": "^4.3.7",
		"chai-as-promised": "^7.1.1",
		"eslint": "^8.2.0",
		"mocha": "^10.1.0",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.3.2"
	},
	"dependencies": {
		"@fastify/cookie": "^8.3.0",
		"bcrypt": "^5.1.0",
		"class-validator": "^0.14.0",
		"dotenv": "^16.0.3",
		"fastify": "^4.11.0",
		"json-schema-to-typescript": "^11.0.2",
		"pg": "^8.8.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.11"
	}
}
